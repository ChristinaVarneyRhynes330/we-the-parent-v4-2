{
  // ‚úÖ Only allow safe, essential built-in tools
  "coreTools": [
    "FileReadTool",
    "FileWriteTool"
  ],

  // üö´ Explicitly block dangerous or unnecessary tools/commands
  "excludeTools": [
    "ShellTool(rm -rf)",
    "ShellTool(sudo)",
    "ShellTool(del)",
    "ShellTool(format)",
    "ShellTool(shutdown)",
    "ShellTool(reboot)"
  ],

  // üì° MCP server configurations
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-supabase"],
      "env": {
        "SUPABASE_URL": "https://your-supabase-url.supabase.co",
        "SUPABASE_ANON_KEY": "your-anon-key"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token"
      }
    }
  },

  // ‚ö†Ô∏è Safety: never auto-approve actions
  "agentYoloMode": false
}
